- attributes("title") = "Scalavatar - simple avatar server"

.container
  .col-md-6
    h1 Scalavatar
  .col-md-4
    h2 Upload Image File
    form(action="/avatar" method="post" enctype="multipart/form-data")
      div
        input#e-mail.form-control(type="text" name="e-mail" placeholder="E-mail address")
      div
        input#image-file.btn.btn-file(type="file" name="image-file")
      div
        button#send.btn.btn-primary Send
